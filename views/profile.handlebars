<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<!--profile picture-->

<picture>
  <source srcset="..." type="image/svg+xml">
  <img src="" class="img-fluid img-thumbnail" alt="...">
</picture>


<div class="row mt-4">
  <a href="/search"><button class="btn btn-primary display-flex justify-center my-2" type="submit">Find Your
      FREQs</button></a>
</div>

<div class="row mt-5">
{{#if recipes.length}}
<div class="col-md-6 recipe-list">
  <h3>My FREQs:</h3>

  {{#each recipes as |recipe|}}
  <div class="row mb-2">
    <div class="col-md-8">
      <h5><a href="/recipes/{{recipe.id}}">{{recipe.name}}</a></h5>
    </div>
    <div class="col-md-4">
      <button class="btn btn-sm btn-danger" data-id="{{recipe.id}}">Delete from FREQs</button>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}
</div>

<script src="./js/profile.js"></script>